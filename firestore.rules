rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow any authenticated user to read and write to the serviceJobs collection.
    match /serviceJobs/{jobId} {
      allow read, write: if request.auth != null;
    }

    // Allow any authenticated user to read and write to the mechanics collection.
    match /mechanics/{mechanicId} {
      allow read, write: if request.auth != null;
    }
  }
}
