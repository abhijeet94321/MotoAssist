
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to the serviceJobs collection for any authenticated user.
    match /serviceJobs/{jobId} {
      allow read, write: if request.auth != null;
    }

    // Allow read/write access to the mechanics collection for any authenticated user.
    match /mechanics/{mechanicId} {
      allow read, write: if request.auth != null;
    }
  }
}
